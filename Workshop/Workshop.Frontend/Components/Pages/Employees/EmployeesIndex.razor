@page "/employees"

@if (loading)
{
    <Loading />
}
else
{
    <MudTable Items="@Employees"
              @ref="table"
              ServerData="LoadListAsync"
              Dense="true"
              Hover="true"
              Striped="true"
              FixedHeader="true"
              FixedFooter="true">
        <ToolBarContent>
            <div class="d-flex justify-content-between">
                <MudText Typo="Typo.h6" Class="me-4">Empleados</MudText>
                <MudButton Variant="Variant.Outlined" 
                           EndIcon="@Icons.Material.Filled.Add" 
                           Color="Color.Info" OnClick="@(() => ShowModalAsync())">
                    Nuevo
                </MudButton>
            </div>
            <MudSpacer />
            <FilterComponent ApplyFilter="SetFilterValue" />
        </ToolBarContent>
        <HeaderContent>
            <MudTh>ID</MudTh>
            <MudTh>Nombre</MudTh>
            <MudTh>Apellido</MudTh>
            <MudTh>Salario</MudTh>
            <MudTh>Fecha ingreso</MudTh>
            <MudTh>Activo</MudTh>
            <MudTh style="width: 270px;">Acciones</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTh>@context.Id</MudTh>
                <MudTd>@context.FirstName</MudTd>
				    <MudTd>@context.LastName</MudTd>
                        <MudTh>@context.Salary</MudTh>
                            <MudTh>@context.HireDateForm</MudTh>
                                <MudTh>@context.IsActive</MudTh>
            <MudTd>
                <MudTooltip Text="Editar">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Warning"
                               OnClick="@(() => ShowModalAsync(context.Id, true))">
                        <MudIcon Icon="@Icons.Material.Filled.Edit" />
                    </MudButton>
                </MudTooltip>
                <MudTooltip Text="Borrar">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Error"
                               OnClick="@(() => DeleteAsync(@context))">
                        <MudIcon Icon="@Icons.Material.Filled.Delete" />
                    </MudButton>
                </MudTooltip>
            </MudTd>
        </RowTemplate>
        <NoRecordsContent>
            <MudText>"No hay registros"</MudText>
        </NoRecordsContent>
        <PagerContent>
            <MudTablePager RowsPerPageString="Número de registros"
                           PageSizeOptions="pageSizeOptions"
                           AllItemsText="Todo"
                           InfoFormat="@infoFormat" />
        </PagerContent>
    </MudTable>
}
